#!/bin/sh
agrega_usuario()
{
  USUARIO=$a;   PWD=$b;   GCOS=$c
  echo "Agregando el Usuario $USUARIO ..."
  echo "useradd -c $GCOS $USUARIO"
  echo "passwd $USUARIO $PWD"
  echo; echo
}

