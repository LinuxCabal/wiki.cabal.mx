    <?php
      function StaticEjemplo()
      {
        static $StaticVar = 0;
        // static $int = 1+2;        // ERROR  (no se permite un expresión)
        $NormalVar = 0;

        print( "\$StaticVar = $StaticVar
                <br />
                \$NormalVar = $NormalVar
                <br />
                <br />" );

        $StaticVar++;
        $NormalVar++;
      }

      print( "<p class=\"SubTitleFont\">" );
      for( $i = 0; $i < 5; $i++ )
         StaticEjemplo();
      print( "</p>" );
      require_once( "incPie5.php" );
    ?>
