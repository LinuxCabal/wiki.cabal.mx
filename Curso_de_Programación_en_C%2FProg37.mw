== Prog37 ==

<syntaxhighlight lang="c" line="GESHI_FANCY_LINE_NUMBERS">

#include <stdio.h>

int main( void )
{

  printf( "Operadores de Pre y Post Decremento\n" );


  int x = 4;
  printf ( "x = %i\n", x );

  x = x - 1;
  printf ( "x = %i\n", x );
 

  x = 4;
  printf ( "x = %i\n", x );

  x -= 1;
  printf ( "x = %i\n\n", x );

  x = 4;
  printf ( "x = %i\n", x );
  printf ( "x-- = %i\n", x-- );
  printf ( "x después del operación = %i\n\n", x );

  x = 4;
  printf ( "x = %i\n", x );
  printf ( "--x = %i\n", --x );
  printf ( "x después del operación = %i\n\n", x );

  printf( "Listo.\n" );

  return 0;
}

</syntaxhighlight>

