#!/usr/bin/python3     

var = 20               #Asignación

if var  != 20:
  print( "El valor de var no es 20 y la expresion es verdad" )
elif var == 20:
  print( "El valor de var es 20 y la expresion es verdad en el primer elif" )
elif var != 30:
  print( "El valor de var no es 30 y la expresion es verdad pero no vamos a verlo" )
else:   # El ultimo else no es obligatiorio
  print( "El valor de var no es 20 y la expresion es falso" )
print( "Listo" )

