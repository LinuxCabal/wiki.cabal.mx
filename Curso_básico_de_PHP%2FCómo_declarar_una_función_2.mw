<syntaxhighlight lang="php" line="GESHI_FANCY_LINE_NUMBERS">
<?php
  require_once( "Cabeza.inc" );
?>
  <body>
    <?php
      function EscribeGrandeConBR( $Texto, $Color = "#000000"  )
      {
         print( "<p style=\"font:28pt helvetica; color:$Color;\">
                   $Texto
                   <br />
                 </p>" );
      }
      print( "<p class=\"TitleFont\">
                Declaración de Función 2
              </p>" );

      $Linea = "Esta es la línea en mi variable \$Linea<br />";

      EscribeGrandeConBR( "Esta es una línea", "#FF0000" );
      EscribeGrandeConBR( "Esta es una otra línea" ); 
      EscribeGrandeConBR( $Linea, "#00FF00" );

      require_once( "incPie.php" );
    ?>
