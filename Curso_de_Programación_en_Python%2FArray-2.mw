#!/usr/bin/python3
#-*-coding: utf-8 -*-

from array import array

# Crear in unicode char array.
MiArregloUniCode = array( "u", "¡Qué Bueno Python!" )
i = 0

for letra in MiArregloUniCode:
  print( "MiArregloUniCode[{0}] es {1}" .format( i, letra ) )
  i += 1

# Convertir el array a un list.
# ... y luego join.
MiString = "".join(MiArregloUniCode.tolist() )
print( MiString )

