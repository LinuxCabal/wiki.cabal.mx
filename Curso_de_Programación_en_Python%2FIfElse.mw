#!/usr/bin/python3     

var = 20               #Asignación

if var  != 20:
  print( "El valor de var no es 20 y la expresion es verdad" )
else:   #Otro comentario
  print( "El valor de var es 20 y la expresion es falso" )
print( "Listo" )

