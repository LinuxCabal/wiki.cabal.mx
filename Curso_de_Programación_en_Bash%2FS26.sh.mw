#!/bin/bash

echo "Con -="
X=4
while [ "$X" -gt "0" ]
  do
    echo $X
    ((X-=1))
done
echo

echo "Con --"
X=4
while [ "$X" -gt "0" ]
  do
    echo $X
    ((X--))
done
echo

echo "Con ++"
X=0
while [ "$X" -lt "4" ]
  do
    echo $X
    ((X++))
done
echo

echo "Con +="
X=0
while [ "$X" -lt "4" ]
  do
    echo $X
    ((X+=1))
done

