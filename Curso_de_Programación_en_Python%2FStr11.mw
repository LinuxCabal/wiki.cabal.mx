<syntaxhighlight lang="python" line="GESHI_FANCY_LINE_NUMBERS">
#!/usr/bin/python3
#-*-coding: utf-8 -*-


Frase = "Bienvenido a nuestro curso de Python"

print( "\nEn la frase:\n\"", Frase, "\"\n ", sep='' )
print( "Usamos .upper para cambiar todas las letras a mayúsculas\n",
        Frase.upper() )
print( "Usamos .lower para cambiar todas las letras a minúsculas\n",
        Frase.lower() )
print( "Usamos .title para cambiar la primera letra de cada palabra a mayúscula\n",
        Frase.title() )
print( "Usamos .swapcase para invertir el estado de capitalización de cada letra\n",
        Frase.swapcase() )

print( "Frase es {}" .format( Frase ) )

