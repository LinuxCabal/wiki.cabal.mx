      function Mas10( $Num )
      {
        return ( $Num += 10 );
      }

      $NumOrig = 100;
      $i = 0;

      print( "<p class=\"TitleFont\" style=\"font-weight:bold; color:#000099;
                         text-decoration:underline;\">
                Pase por valor
              </p>
              <p class=\"SubTitleFont\" style=\"color:#000000;\">" );
      while( $i++ < 5 )
        print(  Mas10( $NumOrig ) . "<br />" );
      print( "</p>

              <p class=\"TitleFont\" style=\"font-weight:bold; color:#000099;
                         text-decoration:underline;\">
                Pase por referencia
              </p>
              <p class=\"SubTitleFont\" style=\"color:#000000;\">" );
      while( $i++ < 11 )
        print(  Mas10( &$NumOrig ) . "<br />" );
      print( "</p>" );
      require_once( "incPie.php" );
    ?>
