extern void srand1( unsigned int x );
extern int rand1( void );

int main( void )
{
  int Contar;
  unsigned Semilla;

  printf( "Ingressa una semilla (entero positivo): " );

  while( scanf( "%u", &Semilla ) == 1 )
  {
    srand1( Semilla );

    for( Contar = 0; Contar < 5; Contar++ )
