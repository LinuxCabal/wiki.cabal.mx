== Prog49 ==

<syntaxhighlight lang="c" line="GESHI_FANCY_LINE_NUMBERS">

#include <stdio.h>

int main( void )
{
  printf( "  Nombre        Verdad si su argumento es\n\n"
          " isalnum()             Alfanumerico\n"
          " isalpha()             Alfabetico\n"
          " isblank()  caracter vacio como \' \', \'<tab>\', \'\\n\'\n"
          " iscntrl()  caracter de control como \'<Ctrl+B>\'\n"
          " isdigit()  un numeral (\'0\' - \'9\')\n"
          " isgraph()  un caracter que escribe algo que no es \' \'\n"
          " islower()  una minuscula\n"
          " isprint()  que imprime algo en la pantalla\n"
          " ispunct()  imprime algo que NO es \' \' , o alfanumerico\n"
          " isspace()  un caracter de espacio blanco\n"
          " isupper()  una mayuscula\n"
          " isxdigit() un numeral hexadecimal\n\n" );
  return 0;
}

</syntaxhighlight>

