      if( $Resultado == "Me Gusta" )
      {
        print( "<p class=\"TitleFont\">
                  A mi me gusta mucho PHP
                </p>" );
      }
    ?>

    <?php
      if( $Resultado == "No Me Gusta" )
      {
        print( "<p class=\"TitleFont\">
                  A mi no me gusta PHP
                </p>" );
      }
      else
      {
        print( "<p class=\"TitleFont\">
                  A mi me gusta mucho PHP
                </p>" );
      }
    ?>

    <?php
      if( $Resultado == "No Me Gusta" )
        print( "<p class=\"TitleFont\">
                  A mi no me gusta PHP
                </p>" );
      elseif( $Resultado == "Me Gusta" )
        print( "<p class=\"TitleFont\">
                  A mi me gusta mucho PHP
                </p>" );
      else
        print( "<p class=\"TitlFont\">
                  No se si a mi me gusta PHP
                </p>" );

