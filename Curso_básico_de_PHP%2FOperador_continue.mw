      print(   "<p class=\"TitleFont\">
                  El Operador continue
                </p>
                <p class=\"SubTitleFont\">" );
      for( ; $Num <= 12; $Num++ )
      {
        if( $Num == 0 )
        {
          print( "Ilegal dividir por 0, Siguiente<br />" );
          continue;
        }
        print(   "100 / $Num = " . ( 100 / $Num ) . "<br />" );
      }
      print(   "</p>" );
