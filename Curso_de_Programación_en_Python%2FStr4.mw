#!/usr/bin/python3
#-*-coding: utf-8 -*-

Frase = "Hola Mundo"
i = 0

while i < len( Frase ):
  print( "La letra \'", Frase[i],
         "\' se presenta por primera vez en la posición ",
           Frase.find( Frase[i] ), " en la frase: ",  Frase, sep='' )
  i += 1

print( "\nOtra manera:" )

for Letra in Frase:
  print( "La letra \'", Letra,
         "\' se presenta por primera vez en la posición ", 
          Frase.find( Letra ), " en la frase: ",  Frase, sep='' )

print( "\nListo\n" )

