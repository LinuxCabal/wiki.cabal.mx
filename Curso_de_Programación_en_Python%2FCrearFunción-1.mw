#!/usr/bin/python3
#-*-coding: utf-8 -*-

a = 23
b = -23

def absolute_value( n ):
  if n < 0:
    n = -n
  return n

if absolute_value( a ) == absolute_value( b ):
  print( "El valor absoluto de", a, "y", b, "son igual." )
else:
  print( "El valor absoluto de", a, "y", b, "son diferentes." )

